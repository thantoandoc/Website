<!DOCTYPE html>
<html lang="en">
  <% include components\header %>
  <body>
    <div class="wrapper">
      <%include components\sidebar%>

      <div class="main-panel">
        <% include components\nav_top%>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
